{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "svarpe/multi-client",
            "hostname": "client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "svarpe/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "svarpe/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "svarpe/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
               {
                 "hostPort":80,
                 "containerPort":80
               }
            ],
            "links":["client","server"],
            "memory": 128
        }
    ]
}